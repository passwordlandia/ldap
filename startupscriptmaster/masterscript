#!/bin/bash

yum -y install google-cloud-sdk
google-cloud-sdk-app-engine-python
gcloud init

yum -y install python-pip
pip install --upgrade pip
pip install oauth2client
pip install --upgrade google-api-python-client

yum install git -y

git clone https://github.com/passwordlandia/ldap.git

####LDAP SERVER START#####
gcloud compute instances ldap-server-a \
    --zone us-east1-b \
    --machine-type f1-micro \
    --image-family centos-7 \
    --image-project centos-cloud \
    --tags "http-server","https-server" \
    --metadata-from-file startup-script="/home/paulierev1775/ldap/startupscriptmaster/ldapstartupscript.sh"
    
ldapip=$(gcloud compute instances list | grep ldap-server-a | awk '{ print $4 }' | tail -1) 

echo $ldapip > ldapip.txt
####LDAP SERVER END#####

#####NFS SERVER START####
gcloud compute instances ldap-nfs-server \
    --zone us-east1-b \
    --machine-type f1-micro \
    --image-family centos-7 \
    --image-project centos-cloud \
    --tags "http-server","https-server" \
    --metadata-from-file startup-script="/home/paulierev1775/ldap/startupscriptmaster/nfsstartupscript.sh"
    
nfsip=$(gcloud compute instances list | grep nfs-server | awk '{ print $4 }' | tail -1) 

echo $nfsip > nfsip.txt
#####NFS SERVER END#####

####UBNFS CLIENT A START#####
gcloud compute instances ldap-ubnfsa-client \
    --zone us-east1-b \
    --machine-type f1-micro \
    --image-family centos-7 \
    --image-project ubuntu-1604 \
    --tags "http-server","https-server" \
    --metadata-from-file startup-script="/home/paulierev1775/ldap/startupscriptmaster/ubnfsclientstartupscript.sh"
    
ubnfsaip=$(gcloud compute instances list | grep ldap-ubnfsa-client | awk '{ print $4 }' | tail -1) 

echo $ubnfsaip > ubnfsa.txt
####UBNFS CLIENT A END#####

####UBNFS CLIENT B START#####
gcloud compute instances ldap-ubnfsb-client \
    --zone us-east1-b \
    --machine-type f1-micro \
    --image-family centos-7 \
    --image-project ubuntu-1604 \
    --tags "http-server","https-server" \
    --metadata-from-file startup-script="/home/paulierev1775/ldap/startupscriptmaster/ubnfsclientstartupscript.sh"
    
ubnfsbip=$(gcloud compute instances list | grep ldap-ubnfsb-client | awk '{ print $4 }' | tail -1) 

echo $ubnfsbip > ubnfsb.txt
####UBNFS CLIENT B END#####

####POSTGRES SERVER START#####
gcloud compute instances ldap-postgres-server\
    --zone us-east1-b \
    --machine-type f1-micro \
    --image-family centos-7 \
    --image-project centos-cloud \
    --tags "http-server","https-server" \
    --metadata-from-file startup-script="/home/paulierev1775/ldap/startupscriptmaster/postgresstartupscript.sh"
    
postgresip=$(gcloud compute instances list | grep ldap-postgres-server | awk '{ print $4 }' | tail -1) 

echo $postgresip > postgresip.txt
####POSTGRES SERVER END####

####DJANGO SERVER START####
gcloud compute instances ldap-django-server \
    --zone us-east1-b \
    --machine-type f1-micro \
    --image-family centos-7 \
    --image-project centos-cloud \
    --tags "http-server","https-server" \
    --metadata-from-file startup-script="/home/paulierev1775/ldap/startupscriptmaster/djangoserverstartupscript.sh"
    
djangoip=$(gcloud compute instances list | grep ldap-django-server | awk '{ print $4 }' | tail -1) 

echo $djangoip > djangoip.txt
####DJANGO SERVER END####

##END OF SCRIPT####
